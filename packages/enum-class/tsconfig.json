{
  "include": [
    "build.config.ts",
    "src",
    "__tests__",
    "types/index.d.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noEmit": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false
  }
}
